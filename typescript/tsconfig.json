{
  "compilerOptions": { //编译选项
    "target": "es2016", //配置编译目标代码的版本标准
    "module": "commonjs", //配置编译目标使用的模块化标准
    "lib": [
      "es2016"
    ],
    "outDir": "./dist", //编译结果输出目录
    "strictNullChecks": true, //更加严格的空字符串检查
    "noImplicitUseStrict": true, //编译的结果不用添加"use strict"
    "esModuleInterop": true, //启用es模块化交互非es模块导出
    "moduleResolution": "node", //寻找文件时使用node解析策略
    "strictPropertyInitialization": true
  },
  "include": [ //要编译的文件夹
    "./src"
  ],
  // "files": [ //只编译该文件及其依赖的文件
  //   "./src/index.ts"
  // ]
}